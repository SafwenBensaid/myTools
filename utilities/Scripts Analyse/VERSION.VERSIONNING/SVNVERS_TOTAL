HOST=172.28.70.15;
CHEMIN="/APP/biatass/bnk/bnk.run/PACK.TAF";
PACK="$1";
LIV="$2";


 

NBR=`rsh  $HOST ls -l $CHEMIN/$PACK |wc -l`
NBR=`echo "$NBR - 1"|bc`
DT=`date '+%y%m%d'`
TM=`date '+%H%M'`


MSG="$1 : $NBR obj(s) : $DT : $TM : #$2 : HF : HOTFIX"
MSG2="$1: $NBR obj(s) au $DT : $TM LIVRAISON #$2"


if [ "$1" = "" ] || [ "$2" = "" ]  ;
then
 echo "Veuillez verifier : un parametre est manquant ";
 exit;
else




if [ $NBR = "-1" ];
then
 echo "PACK INEXISTANT";
 exit;
else

echo "Pour confirmer ce versionnig taper Y entree";
read AA;

if [ "$AA" != "Y" ];
then
exit;
fi

echo "Veuillez patienter";




# ----------------------------versionning au niveau du depot ov_t24-----------------------------------------------------
 cd /VERSDATA/LWorkings/LW_OV
 svn update
 cd /VERSDATA/LWorkings/LW_OV/TAF-FULLPACK/

 rsh $HOST ls $CHEMIN/$PACK|nawk -v HOST=$HOST -v CHEMIN=$CHEMIN -v PACK=$PACK -F -  '{print "if [ -d /VERSDATA/LWorkings/LW_OV/TAF-FULLPACK/"$1" ]; then rcp t24ass@" HOST ":" CHEMIN "/" PACK "/" $0 " /VERSDATA/LWorkings/LW_OV/TAF-FULLPACK/" $1 "; else mkdir /VERSDATA/LWorkings/LW_OV/TAF-FULLPACK/" $1 "; rcp t24ass@" HOST ":" CHEMIN "/" PACK "/" $0 " /VERSDATA/LWorkings/LW_OV/TAF-FULLPACK/" $1 ";fi"}'|bash

 cd /VERSDATA/LWorkings/LW_OV/TAF-FULLPACK/
 svn add * --force
 svn ci -m "$MSG2"
echo " VERSIONNING REUSSI $MSG2"


# ----------------------------versionning au niveau du depot_release (trunk et branche)-----------------------------------------------------


cd /VERSDATA/LWorkings/LW_RELEASE/depot_release
 svn update



 cd /VERSDATA/LWorkings/LW_RELEASE/depot_release/branches/C.RELEASE.R6/QL1/TAF-FULLPACK/

 rsh $HOST ls $CHEMIN/$PACK|nawk -v HOST=$HOST -v CHEMIN=$CHEMIN -v PACK=$PACK -F -  '{print "if [ -d /VERSDATA/LWorkings/LW_RELEASE/depot_release/branches/C.RELEASE.R6/QL1/TAF-FULLPACK/"$1" ]; then rcp t24ass@" HOST ":" CHEMIN "/" PACK "/" $0 " /VERSDATA/LWorkings/LW_RELEASE/depot_release/branches/C.RELEASE.R6/QL1/TAF-FULLPACK/" $1 "; else mkdir /VERSDATA/LWorkings/LW_RELEASE/depot_release/branches/C.RELEASE.R6/QL1/TAF-FULLPACK/" $1 "; rcp t24ass@" HOST ":" CHEMIN "/" PACK "/" $0 " /VERSDATA/LWorkings/LW_RELEASE/depot_release/branches/C.RELEASE.R6/QL1/TAF-FULLPACK/" $1 ";fi"}'|bash



 cd /VERSDATA/LWorkings/LW_RELEASE/depot_release/trunk/TAF-FULLPACK/

rsh $HOST ls $CHEMIN/$PACK|nawk -v HOST=$HOST -v CHEMIN=$CHEMIN -v PACK=$PACK -F -  '{print "if [ -d /VERSDATA/LWorkings/LW_RELEASE/depot_release/trunk/TAF-FULLPACK/"$1" ]; then rcp t24ass@" HOST ":" CHEMIN "/" PACK "/" $0 " /VERSDATA/LWorkings/LW_RELEASE/depot_release/trunk/TAF-FULLPACK/"$1 "; else mkdir /VERSDATA/LWorkings/LW_RELEASE/depot_release/trunk/TAF-FULLPACK/" $1 "; rcp t24ass@" HOST ":" CHEMIN "/" PACK "/" $0 " /VERSDATA/LWorkings/LW_RELEASE/depot_release/trunk/TAF-FULLPACK/" $1 ";fi"}'|bash



 cd /VERSDATA/LWorkings/LW_RELEASE/depot_release/branches/C.PROJET/TAF-FULLPACK/

 rsh $HOST ls $CHEMIN/$PACK|nawk -v HOST=$HOST -v CHEMIN=$CHEMIN -v PACK=$PACK -F -  '{print "if [ -d /VERSDATA/LWorkings/LW_RELEASE/depot_release/branches/C.PROJET/TAF-FULLPACK/"$1" ]; then rcp t24ass@" HOST ":" CHEMIN "/" PACK "/" $0 " /VERSDATA/LWorkings/LW_RELEASE/depot_release/branches/C.PROJET/TAF-FULLPACK/" $1 "; else mkdir /VERSDATA/LWorkings/LW_RELEASE/depot_release/branches/C.PROJET/TAF-FULLPACK/" $1 "; rcp t24ass@" HOST ":" CHEMIN "/" PACK "/" $0 " /VERSDATA/LWorkings/LW_RELEASE/depot_release/branches/C.PROJET/TAF-FULLPACK/" $1 ";fi"}'|bash





 cd /VERSDATA/LWorkings/LW_RELEASE/depot_release/

 svn add * --force
 svn ci -m "$MSG"
echo " VERSIONNING REUSSI $MSG"

# ---------------------------------------------------------------------------------


fi
fi

echo "END.VERSIONNING.PROCESS"